<div class="container">
  <div>
    <%= render 'shared/search'%>
  </div>

<!-- Explore -->
<div class="banner-between text-center">
  <h2>Explore Colonies</h2>
  <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M224 416c-8.188 0-16.38-3.125-22.62-9.375l-192-192c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L224 338.8l169.4-169.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-192 192C240.4 412.9 232.2 416 224 416z"/></svg>
</div>

<div class="card-container">
  <% @colonies.each do |colony| %>

    <div class="card-trip">

      <% if colony.photo.attached? %>
        <%= cl_image_tag colony.photo.key %>
      <% else %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
      <% end %>

      <!-- <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" /> -->
      <div class="card-trip-infos">
        <div>
          <h2><%= link_to colony.name, colony_path(colony) %></h2>
          <p>created by <strong><%= colony.user.email.match(/^(?<username>.+)@/)[:username] %></strong> in the year <%= colony_fake_year(colony) %></p>
          <p><%= colony.description %></p>
        </div>
        <h2 class="card-trip-pricing"><i style="width:1em; height:1em; background:url(https://res.cloudinary.com/dqat8a2hi/image/upload/v1645626818/Space-BNB/Dogecoin_Logo_myyf8i.png); background-size:cover; display:inline-block;"> </i> 500,000.00</h2>
        <img src="https://res.cloudinary.com/dqat8a2hi/image/upload/v1645622283/Space-BNB/terminator-portrait-paint-by-number_gbszfq.jpg" class="card-trip-user avatar-bordered" />
      </div>
    </div>

  <% end %>
</div>



  <div>
<!-- Explore -->
<div class="banner-between text-center">
  <h2>Explore Activities</h2>
  <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M224 416c-8.188 0-16.38-3.125-22.62-9.375l-192-192c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L224 338.8l169.4-169.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-192 192C240.4 412.9 232.2 416 224 416z"/></svg>
</div>

    <div class="card-product" style="margin:10px 0;">
      <img src="https://res.cloudinary.com/dqat8a2hi/image/upload/v1645620922/Space-BNB/banner_activities_jh28z5.jpg" style="object-fit:cover;" />

      <div class="card-product-infos">
        <h2>Space walks</h2>
        <p>Explore nearby asteroids and go space-drifting, tethered to a drone! <strong>fun AND dangerous!</strong></p>
      </div>
   </div>

    <div class="card-product" style="margin:10px 0;">
      <img src="https://res.cloudinary.com/dqat8a2hi/image/upload/v1645621856/Space-BNB/outer-space-normandy-stars-planets-rings-spaceships-science-fiction-vehicles-wide-resolution-1080P-wallpaper-middle-size_whytac.jpg" />

      <div class="card-product-infos">
        <h2>Space Racing</h2>
        <p>Test your skills on the v-track in our specialised racing craft! full training provided. <strong>Thrilling!</strong></p>
      </div>
   </div>

    <div class="card-product" style="margin:10px 0;">
      <img src="https://res.cloudinary.com/dqat8a2hi/image/upload/v1645621997/Space-BNB/maxresdefault_xn4qy8.jpg" />

      <div class="card-product-infos">
        <h2>GWWF Wrestling</h2>
        <p>Galaxy Wookie Wrestling Federation - fancy yourself as a hard man? do you say 'whats your boggle mate?!' prior to a bar fight? try your luck in the ring with a wrestling wookie. <strong>Life-Changing.</strong></p>
      </div>
   </div>

  </div>
</div>

<%= render 'shared/footer'%>
