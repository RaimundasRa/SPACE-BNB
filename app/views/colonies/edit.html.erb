<h2>Establish a colony</h2>
<div class="container">
  <%= simple_form_for(@colony) do |f| %>

    <div class="form-inputs">
      <%= f.input :name %>
      <%= f.input :location %>
      <%= f.input :population %>
      <%= f.input :hostility %>
      <%= f.input :description %>
      <%# f.input :photo as: :file %>
    </div>

    <div class="form-actions">
      <%= f.submit "Create!" %>
    </div>
  <% end %>

  <%= link_to 'Back to my colonies', my_colonies_path %>

</div>
