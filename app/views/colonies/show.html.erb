<!-- COLONY BANNER -->

<div class="colony-banner colony-show-banner text-center" style="background-image: linear-gradient(rgba(0,0,0,0.0),rgba(0,0,0,0.7)), url(<%= cloudinary_url(@colony.photo.key) %>);">
  <div class="container">
    <h2><strong><%= @colony.name %></strong></h2>
    <p>Established by <strong><%= colony_owner_name(@colony) %></strong> in the year <%= colony_fake_year(@colony) %>. This colony is home to <strong><%= colony_population(@colony) %></strong> inhabitants with a <strong><%= colony_hostility(@colony) %></strong> hostility rating.</p>
  </div>
</div>

<div class="container">

<div class="row justify-content-center text-center row-cols-auto">

  <div class="col-3 stat-card">
      <h4><small>Founder</small></h4>
      <p><%= colony_owner_name(@colony) %></p>
  </div>

  <div class="col-3 stat-card">
    <h4>Established</h4>
    <p><%= colony_fake_year(@colony) %></p>
  </div>

  <div class="col-3 stat-card">
    <h4>Population</h4>
    <p><%= colony_population(@colony) %></p>
  </div>
</div>

<div class="row justify-content-center text-center row-cols-auto">

  <div class="col-3 stat-card">
      <h4><small>Hostility</small></h4>
      <p><small><sup><%= @colony.hostility.to_i %>/100</sup></small> '<%= colony_hostility(@colony) %>'</p>
  </div>

  <div class="col-3 stat-card">
    <h4>Established</h4>
    <p><%= colony_fake_year(@colony) %></p>
  </div>

  <div class="col-3 stat-card">
    <h4>Population</h4>
    <p><%= colony_population(@colony) %></p>
  </div>
</div>


