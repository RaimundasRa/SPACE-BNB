<div class="container-height">
  <!-- Explore -->
  <div class="banner-between text-center">
    <h2>My Colonies</h2>
    <svg class="svg-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path d="M224 416c-8.188 0-16.38-3.125-22.62-9.375l-192-192c-12.5-12.5-12.5-32.75 0-45.25s32.75-12.5 45.25 0L224 338.8l169.4-169.4c12.5-12.5 32.75-12.5 45.25 0s12.5 32.75 0 45.25l-192 192C240.4 412.9 232.2 416 224 416z"/></svg>
  </div>

  <div class="container">
    <%= link_to 'Establish a new Colony', new_colony_path, class: 'btn btn-dark' %>

    <% @colonies.each do |colony| %>

    <div class="card-product" style="margin:10px 0;">
      <% if colony.photo.attached? %>
        <!-- <%= cl_image_tag colony.photo.key %> -->
      <%= link_to (cl_image_tag colony.photo.key), colony_path(colony) %>
      <% else %>
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/greece.jpg" />
      <% end %>

      <div class="card-product-infos">
        <h2><%= link_to colony.name, colony_path(colony) %></h2>
        <p><strong>Established:</strong> <%= colony_fake_year(colony) %><br>
        <strong>Population: </strong> <%= colony.population %><br>
        <strong>Hostility: </strong><%= colony.hostility %><br>
        <strong>Bookings: </strong>0</p>
      </div>
      <div style="float: right; margin-left: 50px;">
        <%= link_to "View", colony_path(colony), class: 'btn btn-dark' %>
        <%= link_to "Edit", edit_colony_path(colony), class: 'btn btn-dark' %>
        <%= link_to "Delete", colony_path(colony), class: 'btn btn-dark', method: :delete %>
      </div>
    </div>
    <% end %>
  </div>
</div>

<%= render 'shared/footer'%>
